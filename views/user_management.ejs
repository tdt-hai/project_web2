<%- include('header'); -%>
<%- include('nav'); -%>
<title>User management</title>
<link rel="stylesheet" href="stylesheets/mystyle.css">
<br>
<br>
<div class="container emp-profile">
   <div class="row justify-content-center">
        <div class="col-8">
        <h1 style ="text-align: center">Danh sách người dùng</h1>
            <ul class="ulcustom" >
                <% if (listUser) { %>
                    <% listUser.forEach(u => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center licustom" style="background-color: #d3d3d387; color: rgb(16 1 1 / 93%);"> 
                            Email: <%= u.email %> <br>
                           Tên người dùng: <%= u.displayName %> <br>   
                            Account number: <%= u.account_number %> 
                            <a href="/user_management/<%= u.id %>" class="btn btn-outline-secondary" type="button" style = "color: black">Edit</a>
                        </li>
                    </li>
                    <% }); %>
                    <% } %>
            </ul>
    </div>
</div>
</div>
</body>
